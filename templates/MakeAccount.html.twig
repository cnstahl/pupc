{% extends "layout.html.twig" %}

{% set title = "Account Registration" %}

{% block body %}
	{{ parent() }}
	
	<form role="form" action="" method="post" class="form-horizontal">
		<div class="form-group">
			<label for="name" class="col-sm-2 control-label">Forename:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="name" placeholder="Enter your first name"></input>
			</div>
		</div>
		<div class="form-group">
			<label for="surname" class="col-sm-2 control-label">Surname:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="surname" placeholder="Enter your last name"></input>
			</div>
		</div>
		<div class="form-group">
			<label for="role" class="col-xs-4 col-sm-2 control-label">Role:</label>
			<div class="col-sm-10">
	    		<select class="form-control" name="role">
					<option value="Competitor">Competitor</option>
					<option value="Coach">Coach</option>
					<option value="Volunteer">Volunteer</option>
					<option value="Judge">Judge</option>
					<option value="Organizer">Organizer</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="email" class="col-sm-2 control-label">Email address:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="email" placeholder="Enter e-mail address"></input>
				<small id="emailHelp" class="form-text text-muted">We&rsquo;ll never share your email with anyone else. If you participate in the <a href="PhysiKarma.php">PhysiKarma initiative</a>, this must match your login on Expii.</small>
			</div>
		</div>
		<div class="form-group">
			<label for="password" class="col-sm-2 control-label">Password:</label>
			<div class="col-sm-5">
				<input type="password" class="form-control" name="password" placeholder="Enter password"></input>
			</div>
			<div class="col-sm-5">
				<input type="password" class="form-control" name="repassword" placeholder="Re-enter password"></input>
			</div>
		</div>
		<button type="submit" name="submit" value="true" class="btn btn-default">Register</button>
	</form>
{% endblock body %}

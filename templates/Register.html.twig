{% extends "layout.html.twig" %}

{% set title = "Registration" %}

{% block image %}{{ parent() }}{% endblock %}
{% block body %}
	{{ parent() }}
	
	<form role="form" action="" method="post" class="form-horizontal">
		<div class="form-group">
			<label for="format" class="col-xs-4 col-sm-2 control-label">Format:</label>
			<div class="col-sm-10">
	    		<select class="form-control" name="format">
					<option value="false">Onsite event</option>
					<option value="true">Online competition</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="type" class="col-xs-4 col-sm-2 control-label">Type:</label>
			<div class="col-sm-10">
	    		<select class="form-control" name="type">
					<option value="true">Individual</option>
					<option value="false">Team</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="aid" class="col-xs-4 col-sm-2 control-label">Financial aid:</label>
			<div class="col-sm-10">
	    		<select class="form-control" name="aid">
					<option value="true">Yes, I need financial aid.</option>
					<option value="false" selected>No, I do need financial aid.</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="username" class="col-sm-2 control-label">Notes, requests:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="note" placeholder=""></input>
			</div>
		</div>
		<button type="submit" name="submit" value="true" class="btn btn-default">Register</button>
	</form>
{% endblock body %}

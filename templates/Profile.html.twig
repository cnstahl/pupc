{% extends "layout.html.twig" %}

{% set title = "User Profile" %}

{% block image %}{{ parent() }}{% endblock %}
{% block body %}
	{{ parent() }}

	<h2>{{ role }}</h2>

	<form role="form" action="" method="post" class="form-horizontal">
		<div class="form-group">
			<label for="name" class="col-xs-7 col-sm-1 control-label">Forename:</label>
			<div class="col-sm-6"><input type="text" class="form-control" name="name" value="{{ name }}"></input></div>
		</div>
		<div class="form-group">
			<label for="surname" class="col-xs-7 col-sm-1 control-label">Surname:</label>
			<div class="col-sm-6"><input type="text" class="form-control" name="surname" value="{{ surname }}"></input></div>
		</div>
{% if role == "Competitor" %}
		<div class="form-group">
			<label for="grade" class="col-xs-7 col-sm-1 control-label">Grade:</label>
			<div class="col-sm-6"><input type="text" class="form-control" name="grade" value="{{ grade }}"></input></div>
		</div>
{% endif %}
		<div class="form-group">
			<label for="school" class="col-xs-7 col-sm-1 control-label">School:</label>
			<div class="col-sm-6"><input type="text" class="form-control" name="school" value="{{ school }}"></input></div>
		</div>
		<div class="form-group">
			<label for="city" class="col-xs-7 col-sm-1 control-label">City:</label>
			<div class="col-sm-6"><input type="text" class="form-control" name="city" value="{{ city }}"></input></div>
		</div>
		<div class="form-group">
			<label for="state" class="col-xs-7 col-sm-1 control-label">State/Province:</label>
			<div class="col-sm-6"><input type="text" class="form-control" name="state" value="{{ state }}"></input></div>
		</div>
		<div class="form-group">
			<label for="country" class="col-xs-7 col-sm-1 control-label">Country:</label>
			<div class="col-sm-6"><input type="text" class="form-control" name="country" value="{{ country }}"></input></div>
		</div>
{% if role == "Competitor" %}
		<div class="form-group">
			<label for="coach" class="col-xs-7 col-sm-1 control-label">Coach:</label>
			<div class="col-sm-6"><input type="text" class="form-control" name="coach" value="{{ coach }}"></input></div>
		</div>
{% elseif role == "Organizer" %}
		<div class="form-group">
			<label for="hash" class="col-xs-7 col-sm-1 control-label">Authorization:</label>
			<div class="col-sm-6"><input type="password" class="form-control" name="hash" value="{{ hash }}"></input></div>
		</div>
{% endif %}
		<button type="submit" name="submit" value="true" class="btn btn-default">Update</button>
	</form>
{% endblock body %}

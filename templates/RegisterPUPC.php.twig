{% extends "layout.html.twig" %}

{% set title = "Registration" %}

{% block body %}
	{{ parent() }}
	
	<form role="form" action="" method="post">
		<div class="row">
			<label for="aid" class="col-sm-2 col-form-label">Financial aid:</label>
			<div class="col-sm-10">
	    		<input type="checkbox" class="form-control" name="aid"></input>
			</div>
		</div>
		<div class="row">
			<label for="username" class="col-sm-2 col-form-label">Notes or requests:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="note" placeholder=""></input>
			</div>
		</div>
		<button type="submit" name="submit" value="true" class="btn btn-default">Register</button>
	</form>
{% endblock body %}

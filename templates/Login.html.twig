{% extends "layout.html.twig" %}

{% set title = "Log in" %}

{% block body %}
	{{ parent() }}
	
	<form role="form" action="PL_includes/login.php" method="post" class="form-horizontal">
		<div class="form-group">
			<label for="email" class="col-sm-2 control-label">Email:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="email" placeholder="Email"></input>
			</div>
		</div>

		<div class="form-group">
			<label for="email" class="col-sm-2 control-label">Password:</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" name="password" placeholder="Password" />
			</div>
		</div>
		<input type="hidden" name="page" value="{{ page }}" />
		<button type="submit" name="submit" value="true" class="btn btn-default btn-sm">Log in</button>
	</form>
{% endblock body %}

{% extends "layout.html.twig" %}

{% set title = "Password Reset" %}

{% block body %}
	{{ parent() }}
	
	<form role="form" action="" method="post">
{% if not reset %}
		<div class="row">
			<label for="email" class="col-sm-2 col-form-label">Email address:</label>
			<div class="col-sm-10">
				<div class="input-group">
	    			<input type="text" class="form-control" name="email" placeholder="Enter Princeton netid"></input>
					<span class="input-group-addon">@princeton.edu</span>
				</div>
			</div>
		</div>
		<button type="submit" name="submit" value="true" class="btn btn-default">Reset</button>
{% else %}
		<input type="text" class="hidden" name="email" placeholder="{{ email }}"></input>
		<input type="text" class="hidden" name="code" placeholder="{{ code }}"></input>
		<div class="row">
			<label for="password" class="col-sm-2 col-form-label">Password:</label>
			<div class="col-sm-5">
				<input type="password" class="form-control" name="password" placeholder="Enter password"></input>
			</div>
			<div class="col-sm-5">
				<input type="password" class="form-control" name="repassword" placeholder="Re-enter password"></input>
			</div>
		</div>
		<button type="submit" name="submit" value="true" class="btn btn-default">Reset password</button>
{% endif %}
	</form>
{% endblock body %}
